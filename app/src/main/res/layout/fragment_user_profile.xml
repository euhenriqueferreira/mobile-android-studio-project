<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#000000"
    tools:context=".UserProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1D1A2F"
        android:paddingTop="18dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_bold"
            android:text="Meu perfil"
            android:textColor="#FFFFFF"
            android:textSize="34dp"
            android:layout_marginBottom="15dp"/>

        <ImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/textView9"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:src="@drawable/ic_person"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edit_text_rounded_bg"
            android:contentDescription="Foto de perfil" />


        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome do usuÃ¡rio"
            android:layout_below="@id/imageViewProfile"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="80px"
            android:layout_marginRight="80px"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text_rounded_bg"
            android:backgroundTint="#39304B"
            android:drawableLeft="@drawable/ic_name"
            android:drawablePadding="12dp"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingRight="0px"
            android:paddingBottom="12dp"
            android:textColor="#FAF8F8"
            android:textColorHint="#888888" />

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextName"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="80px"
            android:layout_marginRight="80px"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text_rounded_bg"
            android:backgroundTint="#39304B"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="12dp"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingRight="0px"
            android:paddingBottom="12dp"
            android:text="TextView"
            android:textColor="#888888"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Senha"
            android:enabled="true"
            android:layout_below="@id/textViewEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="80px"
            android:layout_marginRight="80px"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text_rounded_bg"
            android:backgroundTint="#39304B"
            android:drawableLeft="@drawable/ic_password_2"
            android:drawablePadding="12dp"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingRight="0px"
            android:paddingBottom="12dp"
            android:textColor="#FAF8F8"
            android:textColorHint="#888888" />

        <Button
            android:id="@+id/btnSaveProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SALVAR"
            android:onClick="saveProfile"
            android:layout_below="@id/editTextPassword"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#0BF3E2"
            android:fontFamily="@font/poppins"
            android:paddingLeft="70dp"
            android:paddingTop="13dp"
            android:paddingRight="70dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="13dp"
            android:textColor="#1D1A2F"
            android:textSize="23dp" />

        <Button
            android:id="@+id/btnDeleteAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnSaveProfile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#00FFFFFF"
            android:fontFamily="@font/poppins"
            android:onClick="saveProfile"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:paddingRight="10dp"
            android:paddingBottom="2dp"
            android:text="Excluir conta"
            android:textColor="#6FF8F8FA"
            android:textSize="17dp" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="45dp"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/poppins"
            android:layout_below="@id/btnDeleteAccount"
            android:onClick="saveProfile"
            android:paddingLeft="70dp"
            android:paddingTop="9dp"
            android:paddingRight="70dp"
            android:paddingBottom="9dp"
            android:text="SAIR"
            android:textColor="#1D1A2F"
            android:textSize="18dp" />
    </RelativeLayout>

</FrameLayout>